{
  "name": "@chkp/mcp-servers-root",
  "version": "0.0.1",
  "description": "Monorepo for Check Point MCP servers",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "changeset": "changeset",
    "clean": "npx shx rm -rf packages/*/dist dist && npx shx rm -rf **/*.tsbuildinfo",
    "build": "npx nx run-many --target=build --all",
    "build:tsc": "npx nx run-many --target=build:tsc --all",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "build:all": "npm run clean && npm run build",
    "build:all:tsc": "npm run clean && npm run build:tsc",
    "build:mcpb": "node scripts/mcpb/build-mcpb.js",
    "build-debug": "tsc -p tsconfig.debug.json",
    "debug-api": "node dev-scripts/debug-api.js",
    "debug-harmony": "node dev-scripts/debug-harmony.js",
    "release": "changeset publish",
    "version": "changeset version",
    "verify-shebangs": "node scripts-internal/utilities/verify-fix-shebangs.js",
    "fix-shebangs": "node scripts-internal/utilities/verify-fix-shebangs.js --fix",
    "prebuild:all": "test -f scripts-internal/utilities/verify-fix-shebangs.js && npm run verify-shebangs || echo 'Shebang verification skipped - script not available'",
    "verify-packages": "node scripts-internal/verify-packages-for-ci.js",
    "verify-packages:fast": "node scripts-internal/verify-packages-for-ci.js --fast",
    "deps:analyze": "node scripts-internal/verify-and-clean-dependencies.js",
    "deps:clean": "node scripts-internal/verify-and-clean-dependencies.js --apply",
    "deps:status": "node scripts-internal/dependency-status-report.js",
    "sync-versions": "node scripts-internal/version-management/sync-public-versions.js",
    "sync-versions:dry-run": "node scripts-internal/version-management/sync-public-versions.js --dry-run",
    "package:add": "node scripts-internal/utilities/promote-package.js add",
    "package:remove": "node scripts-internal/utilities/promote-package.js remove",
    "package:status": "node scripts-internal/utilities/promote-package.js status",
    "analytics:downloads": "node scripts-internal/analytics/fetch-npm-downloads.js",
    "analytics:downloads:week": "node scripts-internal/analytics/fetch-npm-downloads.js --period last-week",
    "analytics:downloads:month": "node scripts-internal/analytics/fetch-npm-downloads.js --period last-month",
    "analytics:downloads:year": "node scripts-internal/analytics/fetch-npm-downloads.js --period last-year",
    "analytics:downloads:csv": "node scripts-internal/analytics/fetch-npm-downloads.js --format csv --output npm-downloads.csv",
    "analytics:downloads:json": "node scripts-internal/analytics/fetch-npm-downloads.js --format json --output npm-downloads.json",
    "analytics:confluence:test": "node scripts-internal/analytics/confluence-wiki-updater.js --test-connection",
    "analytics:confluence:dry-run": "node scripts-internal/analytics/confluence-wiki-updater.js --dry-run",
    "analytics:confluence:update": "node scripts-internal/analytics/confluence-wiki-updater.js",
    "nx:build:echo-server": "npx nx build @chkp/echo-server-mcp",
    "nx:build:gaia": "npx nx build @chkp/quantum-gaia-mcp",
    "nx:build:gw-cli": "npx nx build @chkp/quantum-gw-cli-mcp",
    "nx:build:gw-cli-base": "npx nx build @chkp/quantum-gw-cli-base",
    "nx:build:gw-cli-connection-analysis": "npx nx build @chkp/quantum-gw-connection-analysis-mcp",
    "nx:build:harmony-infra": "npx nx build @chkp/harmony-infra",
    "nx:build:harmony-sase": "npx nx build @chkp/harmony-sase-mcp",
    "nx:build:https-inspection": "npx nx build @chkp/https-inspection-mcp",
    "nx:build:infra": "npx nx build @chkp/quantum-infra",
    "nx:build:management": "npx nx build @chkp/quantum-management-mcp",
    "nx:build:management-logs": "npx nx build @chkp/management-logs-mcp",
    "nx:build:mcp-utils": "npx nx build @chkp/mcp-utils",
    "nx:build:reputation-service": "npx nx build @chkp/reputation-service-mcp",
    "nx:build:threat-prevention": "npx nx build @chkp/threat-prevention-mcp",
    "nx:build:documentation-tool": "npx nx build @chkp/documentation-mcp",
    "nx:build:threat-emulation": "npx nx build @chkp/threat-emulation-mcp",
    "nx:dev:echo-server": "npx nx run @chkp/echo-server-mcp:dev",
    "nx:dev:gaia": "npx nx run @chkp/quantum-gaia-mcp:dev",
    "nx:dev:gw-cli": "npx nx run @chkp/quantum-gw-cli-mcp:dev",
    "nx:dev:gw-cli-base": "npx nx run @chkp/quantum-gw-cli-base:dev",
    "nx:dev:gw-cli-connection-analysis": "npx nx run @chkp/quantum-gw-connection-analysis-mcp:dev",
    "nx:dev:harmony-infra": "npx nx run @chkp/harmony-infra:dev",
    "nx:dev:harmony-sase": "npx nx run @chkp/harmony-sase-mcp:dev",
    "nx:dev:https-inspection": "npx nx run @chkp/https-inspection-mcp:dev",
    "nx:dev:infra": "npx nx run @chkp/quantum-infra:dev",
    "nx:dev:management": "npx nx run @chkp/quantum-management-mcp:dev",
    "nx:dev:management-logs": "npx nx run @chkp/management-logs-mcp:dev",
    "nx:dev:mcp-utils": "npx nx run @chkp/mcp-utils:dev",
    "nx:dev:reputation-service": "npx nx run @chkp/reputation-service-mcp:dev",
    "nx:dev:threat-prevention": "npx nx run @chkp/threat-prevention-mcp:dev",
    "nx:dev:threat-emulation": "npx nx run @chkp/threat-emulation-mcp:dev",
    "nx:clean:all": "npx nx run-many --target=clean --all"
  },
  "keywords": [
    "mcp",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "axios": "^1.12.1",
    "body-parser": "^1.20.2",
    "commander": "^13.1.0",
    "express": "^4.18.2",
    "jsonc-parser": "^3.3.1",
    "node-fetch": "^2.7.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "^1.1.0",
    "@changesets/cli": "^2.9.2",
    "@nx/eslint": "21.3.5",
    "@nx/eslint-plugin": "21.3.5",
    "@nx/jest": "21.3.5",
    "@types/body-parser": "^1.19.2",
    "@types/commander": "^2.12.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",    
    "esbuild": "^0.25.5",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.0",
    "nx": "21.3.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "tmp": ">=0.2.4",
    "glob": "^11.1.0",
    "rimraf": "^6.0.1"
  }
}
